                connection.on("ReceiveTotalMoneyCaseAmount", (value14) => {
                    $("#totalmoneycaseamount").text(value14);
                })
                connection.on("ReceiveMenuTableCount", (value16) => {
                    $("#menutablecount").text(value16);
                })
            });

        </script>


